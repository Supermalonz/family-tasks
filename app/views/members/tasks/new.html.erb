<div class="grid grid-cols-1 gap-5">
  <div>
    <p class="text-4xl"> Add Task</p>
  </div>

  <div>
    <%= form_with(model: @task, html: { class: 'w-full' }) do |form| %>
    <% if @task.errors.any? %>
      <div style="color: red">
        <ul>
          <% @task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    </div>

    <div>
      <div>
        <%= form.label :description%>
        <%= form.text_field :description%>
      </div>
    </div>

    <div>
      <div>
        <%= form.label :member%>
        <%= form.collection_select :member_id, Member.order(:name), :id, :name%>
      </div>
    </div>

    <div>
      <%= form.submit 'Save', class: "bg-emerald-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"%>
    </div>
  <% end %>

  <div class="underline">
    <%= link_to "Back to tasks", tasks_path %>
  </div>
</div>
